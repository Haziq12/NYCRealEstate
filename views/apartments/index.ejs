<%= title %> 


  <h1>Apartments for rent</h1>
  <h2>All Apartments</h2>
<div class="apartments">
  <% apartments.forEach(apartment => { %> 
      <div class="card w-75 h-75 p-3 text-dark bg-info border-success mb-5 shadow-lg body rounded overflow-auto">
